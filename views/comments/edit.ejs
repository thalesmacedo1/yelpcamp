<%- include ('../partials/header') %>
<div class="container">
    <div class="row flex-column align-items-center justify-content-center mt-5">
        <h1>Edit Comment</h1>
        <div style="width: 30%; margin:0 10px">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>    
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<%- include ('../partials/footer') %> 
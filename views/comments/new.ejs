<%- include ('../partials/header') %>
<div class="container">
    <div class="row flex-column align-items-center justify-content-center mt-5">
        <h1>Add New Comment to <%= campground.name %></h1>
        <div style="width: 30%; margin:0 10px">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>    
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<%- include ('../partials/footer') %> 
<%- include ("../partials/header") %>

<div class="container">
    <header class="jumbotron">
        <h1>Welcome to YelpCamp! üèïÔ∏è</h1>
        <p>View our hard-picked campgrounds from all over the world</p>
        <p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">ADD NEW CAMPGROUND</a>
        </p>
    </header>
    <session class="row">
        <div class="col-lg-12">
            <h3>Our Most Popular Campgrounds!</h3>
        </div>
    </session>
    <session class="row">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-md-3 col-sm-6">
                <div class="card mb-3">
                    <img src="<%= campground.image %>" class="card-img-top">
                    <div class="card-body">
                        <h4 class="card-title"><%= campground.name %></h4>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                    </div>
                </div>
            </div>
        <% }); %>
    </session>

</div>
<%- include ("../partials/footer") %> 
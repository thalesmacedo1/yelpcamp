<%- include ('../partials/header') %> 
<div class="container">
    <div class="row flex-column align-items-center justify-content-center mt-5">
        <h1>Edit <%= campground.name %></h1>
        <div style="width: 30%; margin:0 10px">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" name="campground[price]" value="<%= campground.price %>" min="0.01" step="0.01" >
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[description]" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
        </div>    
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<%- include ('../partials/footer') %> 